/* ボタンの大きさと位置をここで指定 */
.btn__box {
  position: relative;
  width: 180px;
  height: 46px;
  overflow: hidden;
}

/* 線(ボーダー)のスタイル 共通 */
.btn__box:before,
.btn__box:after,
.btn__box .gradation:before,
.btn__box .gradation:after {
  content: '';
  position: absolute;
  // グラデーション
  background:-webkit-gradient(linear, left top, right bottom, from(#f00), to(#00f));
	background:-moz-linear-gradient(left, #f00, #00f);
	background:linear-gradient(left, #f00, #00f);
}
/* 下のボーダー */
.btn__box:before {
  bottom: 0;
  left: -200px;
  width: 200px;
  height: 1.2px;
}
/* 右のボーダー */
.btn__box:after {
  bottom: -200px;
  right: 0;
  width: 1.2px;
  height: 200px;
}
/* 上のボーダー */
.btn__box .gradation:before {
  top: 0;
  right: -200px;
  width: 200px;
  height: 1.2px;
}
/* 左のボーダー */
.btn__box .gradation:after {
  top: -200px;
  left: 0;
  width: 1.2px;
  height: 200px;
}

/* アニメーション指定 */
.btn__box:before {
  animation: leftAnim 3s linear 0s infinite;
}
.btn__box:after {
  animation: bottomAnim 3s linear 2.25s infinite;
}
.btn__box .gradation:before {
  animation: rightAnim 3s linear 0s infinite;
}
.btn__box .gradation:after {
  animation: topAnim 3s linear 2.25s infinite;
}

/* 各アニメーション */
@keyframes topAnim {
  0% {top:-200px;}
  100% {top:200px;}
}
@keyframes bottomAnim {
  0% {bottom:-200px;}
  100% {bottom:200px;}
}
@keyframes rightAnim {
  0% {right:-200px;}
  100% {right:200px;}
}
@keyframes leftAnim {
  0% {left:-200px;}
  100% {left:200px;}
}
