     text-decoration: none;
     transform: translateY(-4px);
      box-shadow: 0 4px 8px 0 rgba(0,0,0,0.12), 0 3px 10px 0 rgba(0,0,0,0.12), 0 4px 7px -2px rgba(0,0,0,0.2);
  }
  &:active{
    -webkit-transform: translateY(4px);
  transform: translateY(4px);/*下に動く*/
  border-bottom: none;/*線を消す*/
  box-shadow: none;
  }
}

// footer
.footer {
  padding: 40px 0px;
  background-color: #242424;
}

.footer-container{
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.list-inline-item{
  border-radius: 50%;
  transition: all 0.5s;
  background-color: rgba(241, 241, 241, 0.08);
  color: #1184F0;
  width: 42px;
  height: 42px;
  display: block;
  font-size: 18px;
  line-height: 42px;
  text-align: center;
  &:hover {
  border-color: #FFF;
  box-shadow: inset 0 0 20px rgba(255, 255, 255, 0.5), 0 0 20px rgba(255, 255, 255, 0.2);
  outline-color: transparent;
  outline-offset: 12px;
  text-shadow: 2px 2px 3px #000;
  }
}
.copyright {
  margin-left: 1em;
}

// Page Top
#page-top{
  position:fixed;
  right:1em;
  bottom:1.5em;
  font-size: 1.5em;
  z-index: 10;
}

#page-top a{
  display: block;
  position: relative;
  width: 50px;
  height: 50px;
  border-radius: 50%;
  color: #fff;
  background-image: linear-gradient(45deg, #FFC107 0%, #ff8b5f 100%);
  transition: .4s;
  &:hover {
    background-image: linear-gradient(45deg, #FFC107 0%, #f76a35 100%);
    color: rgba(000,000,000,.5);
  }
  @include mq('sp') {
    width: 40px;
    height: 40px;
    
  }
}
#page-top i{
  position: absolute;
  top: 40%;
  left: 50%;
  transform: translateY(-40%) translateX(-50%);
}

#page-top a:hover{
  opacity: .8;
}

// Responsive
@media screen and (min-width: 768px) and (max-width: 912px) {
  .text-container__title {
    font-size: 1.5em;
  }
  .service-icon {
    font-size: 2em;
  }
  .textflex {
    margin-top: 0;
  }
}

@media screen and (max-width: 767px) {
  .drawer {
    display: block;
  }
  .nav {
    display: none;
  }
  .headerimg  {
    height: 500px;
  }
}

@media screen and (max-height: 900px){
  .header-title {
    display: none;
  }
}
@media screen and (min-width: 768px) and (max-width: 862px){
  .about-container {
    padding: .5em;
  }
  .service-btn {
    font-size: .5em;
  }
  .text-container {
    padding: 1em;
  }
}
