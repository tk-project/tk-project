// ナビゲーション
.nav {
  position: fixed;
  z-index: 10;
  width: 100%;
  height: 80px;
  background-color: rgba(000,000,000,0.9);
  ul {
    display: flex;
    position: relative;
    align-items: center;
    margin-left: auto;
    margin-right: 5%;
  }
  li {
    padding: 10px;
    color: rgb(176,151,097);
    @include ryuumin();
    display: block;
    width: 20%;
  }
  a{
    &:hover {
      color: rgba(176,151,097,0.8);
    }
  }
}
.nav-underline {
  position: absolute;
  left: 0;
  bottom: 20px;
  width: 15%;
  height: 2px;
  background: rgb(176,151,097);
  transition: all .3s ease-in-out;
}
ul li:nth-child(1).is-current ~ .nav-underline {
  left: 0;
}
ul li:nth-child(2).is-current ~ .nav-underline {
  left: 16.7%;
}
ul li:nth-child(3).is-current ~ .nav-underline {
  left: 34%;
}
ul li:nth-child(4).is-current ~ .nav-underline {
  left: 50.1%;
}
ul li:nth-child(5).is-current ~ .nav-underline {
  left: 65%;
}
ul li:nth-child(6).is-current ~ .nav-underline {
  left: 83%;
}
ul li:nth-child(1):hover ~ .nav-underline {
  left: 0;
}
ul li:nth-child(2):hover ~ .nav-underline {
  left: 16.7%;
}
ul li:nth-child(3):hover ~ .nav-underline {
  left: 34%;
}
ul li:nth-child(4):hover ~ .nav-underline {
  left: 50.1%;
}
ul li:nth-child(5):hover ~ .nav-underline {
  left: 65%;
}
ul li:nth-child(6):hover ~ .nav-underline {
  left: 83%;
}


